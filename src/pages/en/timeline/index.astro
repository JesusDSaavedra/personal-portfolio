---
import Timeline from '@/components/timeline.astro'
import { timelines } from '@/content/timeline'
import MainLayout from '@/layouts/MainLayout.astro'
---

<MainLayout>
  <div class="flex flex-col items-center justify-center">
    <header class="w-[420px] mb-10 text-center">
      <h3
        class="text-3xl mb-3 font-bold tracking-[-1.2px] bg-repeat bg-clip-text bg-100% bg-text-gradient"
        style="-webkit-text-fill-color:transparent"
      >
        Timeline
      </h3>
      <span> The linear view of some milestones and notable moments that happened so far. </span>
    </header>
    <div class="flex justify-center">
      <Timeline timelines={timelines} />
    </div>
  </div>
</MainLayout>


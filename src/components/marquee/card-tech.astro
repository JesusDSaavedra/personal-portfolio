---
import { cn } from '@/lib/utils'

interface Props {
  title: string
  Icon: any
  padding?: number
}

const { title, Icon, padding = 4 } = Astro.props
---

<figure class={cn(`p-${padding}`)}>
  <div class="flex flex-col items-center gap-2">
    <Icon class="w-10 h-10 fill-current" />
    <p class="text-xs font-semibold dark:text-white/60">{title}</p>
  </div>
</figure>

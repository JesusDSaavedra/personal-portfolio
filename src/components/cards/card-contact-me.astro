  <div class="flex items-center sm:flex-col-reverse">
    <div class="flex-1 flex flex-col gap-5">
      <div class="flex gap-4">
        <LinkedIn />
        <a href="https://www.linkedin.com/in/jesusdsaavedra88/" class="text-lg">Jesus Saavedra</a>
      </div>
      <div class="flex gap-4">
        <Mail />
        <a href="mailto:iam.jesusd88@gmail.com" class="text-lg">hi@jesus.me</a>
      </div>
      <div class="flex gap-4">
        <Phone />
        <a href="tel:+573041110800">+57 3041110800</a>
      </div>
    </div>
    <div class="flex-1 w-full">

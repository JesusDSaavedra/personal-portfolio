---
import '@/styles/globals.css'

import Layout from '@/layouts/Layout.astro'
import Navbar from '@/components/sections-layout/navbar.astro'
import Footer from '@/components/sections-layout/footer.astro'
import DotPattern from '@/components/magicui/dot-pattern'

import { cn } from '@/lib/utils'
---

<Layout title="Jesus Saavedra + Developer">
  <div
    class="min-h-screen relative flex justify-center w-full h-full border dark bg-background z-[200]"
  >
    <div class="max-w-[708px] md:w-10/12 lg:w-4/5 flex flex-col items-center">
      <Navbar />
      <main class="w-full mt-10 mb-20">
        <slot />
        <Footer />
      </main>
      <DotPattern
        width={24}
        height={24}
        className={cn('[mask-image:radial-gradient(_circle_at_center,white,transparent)] z-[-100]')}
      />
    </div>
  </div>
</Layout>
